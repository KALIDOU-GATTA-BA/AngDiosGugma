{% block title %}International{% endblock %}
{% block body %}

    <h1 style="text-decoration:underline">Metro Manila</h1>
    {{form_start(metroManila)}}


    {{ form_row(metroManila.title, {'attr' : { 'placeholder': "Title"},  'label': 'Title'} ) }}
