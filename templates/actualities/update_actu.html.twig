{% extends 'base.html.twig' %}
{% form_theme update_actu 'bootstrap_4_layout.html.twig'  %}
{% block title %}Actualities{% endblock %}
{% block body %}
{%if buffer==1 %}
      <span>Hi <mark>{{user}}</mark>  <i class="fa fa-smile-o" style="font-size:48px;color:red"></i>
<br> You can log out <a href="{{path('security_logout')}}"><mark style='color:white; background-color:red'><em> >>here</em></mark></a></span>
  {% endif %}

<h1>Update article</h1><nobr><a href="{{path('actualities')}}"  style="color:blue;background-color:white"> <mark>>>Back to articles sections</mark></a></nobr>
   
      
<br>
    {{form_start(update_actu)}}

    {{ form_row(update_actu.title, {'attr' : { 'placeholder': "Title"}, 'label': 'Title','value':title } ) }}

    {{ form_row(update_actu.image, {'attr' : { 'placeholder': "Select a picture"} }) }}

    {{ form_row(update_actu.content, {'attr' : { 'placeholder': "Content"},  'label': 'Content','value':content} ) }}

    {{ form_row(update_actu.author, {'attr' : { 'placeholder': "Author"},  'label': 'Author','value':author} ) }}

    
    <button type="submit" class ="btn">Save</button><br><br>

    {% block javascript %}
    <script src={{ asset("build/app.js") }}></script>
	{% endblock %}

    {{form_end(update_actu)}}

{% endblock %} 